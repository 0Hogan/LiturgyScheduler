<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LiturgyScheduler.AddNewMassCaptainPage"
             Title="AddNewMassCaptainPage">
    <VerticalStackLayout>
        <Label 
            Text="Add New Mass Captain:"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button
            x:Name="SaveAndExit"
            Text="Save and Exit"
            SemanticProperties.Hint="Saves the MC Info and exits."
            Clicked="OnSaveAndExit"
            HorizontalOptions="Center" />

        <Button
            x:Name="Cancel"
            Text="Cancel"
            SemanticProperties.Hint="Exits without saving."
            Clicked="OnCancel"
            HorizontalOptions="Center" />

    </VerticalStackLayout>
</ContentPage>